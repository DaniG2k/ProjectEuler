#! /usr/bin/env python
import time

start = time.time()

def triangle(n):
	return (n*(n+1))/2

def divisors(n):
    return len([i for i in xrange(1,int(n**.5)) if n%i==0])

i = 1
found = False

while found == False:
    n = triangle(i)
#    if n%2==0 and n%3==0 and n%4==0 and n%5==0 and n%6==0 and n%7==0 and n%10==0 and n%100==0:
    divs = divisors(n)
    if divs >= 500:
        print n,'has',divs,'divisors'
        end = time.time()
        found = True
    i += 1

print 'Time elapsed:',end-start
